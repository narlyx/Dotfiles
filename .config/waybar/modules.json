{
  "custom/spacer": {
    "format": ""
  },

  "custom/launcher": {
    "format": "󱓞  Launcher",
    "on-click": "wofi --show drun",
    "tooltip": false
  },
  
  "custom/powermenu": {
    "format": "󰐥",
    "on-click": "~/.config/sway/scripts/powermenu.sh",
    "tooltip": false
  },

  "custom/pacman": {
    "format": "   {}",
    "interval": 7200,
    "exec": "checkupdates | wc -l",
    "exec-if": "exit 0",
    "on-click": "kitty -e sudo pacman -Syu",
    "signal": 8
  },

  "sway/workspaces": {
    "all-outputs": false
  },

  "sway/mode": {
    "format": "{} Mode"
  },

  "sway/window": {
    "format": "{title}",
    "tooltip": false,
    "icon": true,
    "icon-size": 14
  },

  "wireplumber": {
    "format": "{icon}    {volume}%",
    "format-muted": "",
    "on-click": "helvum",
    "scroll-step": 2,
    "format-icons": ["", "", ""]
  },

  "tray": {
    "icon-size": 14,
    "spacing": 10
  },

  "clock": {
    "interval": 5,
    "tooltip": true,
    "format": "    {:%r}"
  }
}
