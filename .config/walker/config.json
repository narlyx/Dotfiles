{
  "applications": {
    "cache": true
  },
  "plugins": [
      {
      "name": "powermenu",
      "placeholder": "Power Menu",
      "switcher_only": true,
      "recalculate_score": true,
      "show_icon_when_single": true,
      "entries": [
        {
          "label": "Shutdown",
          "icon": "system-shutdown",
          "exec": "shutdown now"
        },
        {
          "label": "Reboot",
          "icon": "system-restart",
          "exec": "reboot"
        },
        {
          "label": "Logout",
          "icon": "system-log-out",
          "exec": "hyprctl dispatch exit"
        }
      ]
    }
  ],
  "theme": "catppuccin"
}
